<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="western.alarm_app.MainActivity"
    android:background="#87CEFA	">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frame_layout"
        android:padding="10dp">

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/frame_layout"
        android:layout_centerInParent="false"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/main_linear_layout">

        <Button
            android:text="Set Alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setAlarmButton"
            android:background="@android:color/holo_red_dark"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:drawableLeft="@mipmap/set"
            android:backgroundTint="#31e26f" />

        <Button
            android:text="SET location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setLocationButton"
            android:background="@android:color/holo_red_light"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:drawableLeft="@mipmap/location"
            android:backgroundTint="#31e26f" />

        <Button
            android:text="Cancel Alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/unsetAlarmButton"
            android:background="@android:color/holo_red_light"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:drawableLeft="@mipmap/cancel"
            android:backgroundTint="#31e26f" />
    </LinearLayout>

</RelativeLayout>
